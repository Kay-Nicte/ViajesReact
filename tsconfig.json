{
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext", 
    "module": "ESNext", 
    "jsx": "react-jsx", 
    "moduleResolution": "node",  
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,  
    "strict": true,  
    "baseUrl": ".",  
    "paths": {
      "@/*": ["src/*"]  
    }
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules"]  
}